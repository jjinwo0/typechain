{
    "include":["src"],
    "compilerOptions": {
        //JS File이 생성될 디렉터리 지정
        //build 폴더에 만들어질 코드를 넣을 것이라 지정
        "outDir": "build",

        //어떤 버전의 JS로 TS를 컴파일할지 정함
        "target": "ES6",

        //라이브러리의 '정의 파일'을 특정해주는 역할
        //목표로 하는 런타임 환경을 나타낸다. -> JS Code가 어디서 동작하는지 정의
        //DOM : 브라우저 작동 코드 작성
        "lib": ["ES6", "DOM"],

        //strict모드 설정
        //개발자를 실수로부터 보호
        "strict": true
    }
}